<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:divider="?android:dividerHorizontal"
    android:showDividers="end">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        tools:text="Title"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:maxLines="3"
        tools:text="qazwsxedcrfvtgbyhnujmikolp"
        android:textSize="15dp"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:id="@+id/infoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="11">

        <ImageView
            android:id="@+id/programmingLanguageIcon"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/red_circle"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/programmingLanguageText"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/colorPrimaryDark"
            tools:text="python" />

        <ImageView
            android:id="@+id/starIcon"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/star"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/starCount"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="25dp"
            tools:text="12348"
            android:textColor="@color/colorPrimaryDark"/>

        <ImageView
            android:id="@+id/forkIcon"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/fork"
            android:gravity="center"/>

        <TextView
            android:id="@+id/forkCount"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="25dp"
            tools:text="51644"
            android:textColor="@color/colorPrimaryDark"/>

    </LinearLayout>

    <Button
        android:id="@+id/goToRepo"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Click here to see repo"
        android:layout_marginTop="10dp"/>

</LinearLayout>